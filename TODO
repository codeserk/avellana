      <div class="w-full sm:w-1/2 md:w-2/5 sm:px-6 mb-12">
        <agile
          ref="slides"

          :options="{
            dots: false,
            fade: true,
            navButtons: false
          }"
          class="slides w-full mb-1"
          @afterChange="changed"
        >
          <div
            v-for="(image, index) in gallery" :key="image.id"
            class="slide" :class="`slide--${index}`"
            @click="selectImage(image.id)"
          >
            <g-image
              :src="image.src"
              class="w-full h-full object-cover object-center"
            />
          </div>
        </agile>

        <agile
          ref="thumbnails"

          :options="{
            centerMode: true,
            dots: false,
            navButtons: false,
            slidesToShow: 2,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3
                    }
                },
              ]
          }"
          class="thumbnails h-42"
        >
          <div
            v-for="(image, index) in galleryWithoutCurrent" :key="image.id"
            :class="`slide--${index}`" class="slide h-full"
            @click="$refs.thumbnails.goTo(index)"
          >
            <g-image
              :src="image.src"
              class="h-full w-full object-cover object-center"
            />
          </div>
        </agile>
      </div>

